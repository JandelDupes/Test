-- GAG Dark Dev Scripts GUI by RedOwl
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local Button = Instance.new("TextButton")
local Drag = Instance.new("Frame")

-- Parent GUI
ScreenGui.Name = "GAGDarkDevGUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

-- Main Frame Styling
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 280, 0, 140)

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

-- Drag Frame
Drag.Name = "Drag"
Drag.Parent = MainFrame
Drag.BackgroundTransparency = 1
Drag.Size = UDim2.new(1, 0, 0.2, 0)

-- Dragging Logic
local dragging, dragInput, dragStart, startPos
Drag.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
Drag.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end
end)
game:GetService("UserInputService").InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
                                       startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

-- Title Label
Title.Name = "Title"
Title.Parent = MainFrame
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0, 5)
Title.Size = UDim2.new(1, 0, 0.2, 0)
Title.Text = "GAG Dark Dev Scripts"
Title.Font = Enum.Font.GothamBold
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 18

-- Button
Button.Name = "ChangePetCD"
Button.Parent = MainFrame
Button.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Button.Position = UDim2.new(0.15, 0, 0.45, 0)
Button.Size = UDim2.new(0.7, 0, 0.3, 0)
Button.Font = Enum.Font.GothamSemibold
Button.Text = "Change Pet CD to 15 Seconds"
Button.TextColor3 = Color3.fromRGB(255, 255, 255)
Button.TextSize = 14

-- Button Rounded Corners
local btnCorner = Instance.new("UICorner", Button)
btnCorner.CornerRadius = UDim.new(0, 6)

-- Visual Cooldown Spoofing Logic
Button.MouseButton1Click:Connect(function()
    -- Search for pet info window
    for _, gui in ipairs(PlayerGui:GetDescendants()) do
        if gui:IsA("TextLabel") and string.match(gui.Text, "opens its frills") then
            -- Pet Info Panel (change to 0.15m)
            gui.Text = string.gsub(gui.Text, "[%d%.]+m", "0.15m")
            print("Changed pet info cooldown to 0.15m")
        elseif gui:IsA("TextLabel") and string.match(gui.Text, "^%d+:%d%dm?$") then
            -- Active Pets Panel (change to 15s)
            gui.Text = "15s"
            print("Changed active pets cooldown to 15s")
        end
    end
end)
